---
import { SEO } from "astro-seo";

interface Props {
	title?: string;
	description?: string;
	ogImage?: string;
}
const {
	title,
	description = "Sharing my Passion for Coding and Problem-Solving.",
	ogImage = "https://matozinho-github-io.vercel.app/og.png",
} = Astro.props as Props;
const twitterHandle = "@matozinho_dev";
---

<SEO
    title={title ? `${title} | Matozinho` : 'Matozinho\'s Blogs'}
    description={description}
    openGraph={{
        basic: {
            title: 'Matozinho\'s Blogs',
            type: 'website',
            image: ogImage,
        },
    }}
    twitter={{
        creator: twitterHandle,
        card: 'summary_large_image',
        site: twitterHandle,
        title: 'Matozinho\'s Blogs',
        description,
        image: ogImage,
        imageAlt: 'Matozinho\'s Blogs',
    }}
    extend={{
        link: [
            {
                rel: 'sitemap',
                href: '/sitemap-index.xml',
            },
        ],
